<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C1FDB6"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="CozySpot"
        app:titleTextColor="#000000" />

    <TextView
        android:id="@+id/textViewMessageContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Mensagem"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMessageFromTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingTop="2dp"
        android:text="De: Eu  Para: Fulano"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewMessageTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingTop="2dp"
        android:text="Data: 2024-01-01 12:00"
        android:textColor="#888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewMessageHouseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text="Casa: TÃ­tulo da Casa"
        android:textColor="#888888"
        android:textSize="13sp"
        android:visibility="gone" />

</LinearLayout>
